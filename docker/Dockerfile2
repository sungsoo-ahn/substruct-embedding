RUN pip install torch-spline-conv==1.0.6
RUN pip install torch-geometric==1.0.3

RUN conda install -y tqdm
RUN conda install -y -c conda-forge neptune-client
RUN conda install -y -c conda-forge rdkit==2019.03.1
RUN conda install -y -c conda-forge scikit-learn

RUN pip install dataclasses